@model Clinica.Models.CadPac

@{
    ViewData["Title"] = "Cadastrar";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Paciente.css" />
</head>
<body>
    <img src="~/img/dente4bg.jpg" class="imgbg" />

    <div id="containerP" class="containerP">
        <h2>Realize seu Cadastro</h2>
        <form asp-action="CadastroP" asp-controller="CadPaciente" method="post">
        <div class="cadP">
            <div class="form-group">
                <select id="inputO" class="form-control">
                        <option selected disabled> Selecionar tipo de acesso...</option>
                        <option value="Paciente" selected>Paciente</option>
                        <option value="/CadMedico/CadastroM">Médico</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Carteirinha"></label>
                <input asp-for="Carteirinha" class="form-control" id="inputCarteirinha">
                <span asp-validation-for="Carteirinha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="inputCPF">CPF</label>
                <input asp-for="Cpf" class="form-control" id="inputCPF">
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div> 

            <div class="form-group">
                <label for="inputNome">Nome</label>
                <input asp-for="Nome" class="form-control" id="inputNome">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="inputNasci">Data de Nascimento</label>
                <input asp-for="DataNasci" type="date" class="form-control" id="inputNasc">
                <span asp-validation-for="DataNasci" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="inputEmail">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
                <div class="linha">
            <div class="form-group">
                 <label for="inputSenha">Senha</label>
                 <input asp-for="Senha" type="password" class="form-control" id="inputSenha">
                 <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
            <select asp-for="Sexo" id="inputOpSex" class="form-control">
                 <option value="" disabled selected>Sexo:</option>
                 <option value="F">Feminino</option>
                 <option value="M">Masculino</option>
                </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="inputTel">Telefone</label>
                <input asp-for="Telefone" type="tel" class="form-control" id="inputTel">
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group">
            <select asp-for="IdPlano"  id="inputPlano" class="form-control">
                 <option value="" disabled selected>Plano:</option>
                 <option value="1">Sorria+ Essencial</option>
                 <option value="2">Sorria+ Plus</option>
                 <option value="3">Sorria+ Premium</option>
            </select>
                <span asp-validation-for="IdPlano" class="text-danger"></span>
            </div>
            </div>
                <button type="submit" class="btnCad">Cadastrar</button>
            </div>
        </form>
        <a asp-action="LoginP" asp-controller="CadPaciente" class="btntroca">
            Já tem conta? Faça Login
        </a> 
</div>

    <script src="~/js/Paciente.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>