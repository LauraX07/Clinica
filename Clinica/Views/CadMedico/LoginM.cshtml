@model Clinica.Models.CadMec


@{
    ViewData["Title"] = "Login";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Medico.css" />
    <title>Login</title>
</head>
<body>
    <img src="~/img/dente4bg.jpg" class="imgbg" />

    <div class="LoginM">
        <form asp-action="LoginM" asp-controller="CadMedico" method="post">
            <h2>Realize seu Login</h2>
            <div class="form-group">
                <select id="inputO" class="form-control">
                    <option disabled>Selecionar tipo de acesso...</option>
                    <option value="/CadPaciente/LoginP">Paciente</option>
                    <option selected>Médico</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputCRM">CRM</label>
                <input asp-for="Crm" class="form-control" id="inputCRM">
                <span asp-validation-for="Crm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputSenha">Senha</label>
                <input asp-for="Senha" class="form-control" id="inputSenha">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            @if (ViewBag.Erro != null)
            {
                <div style="color:red" class="alert alert-danger">@ViewBag.Erro</div>
            }
            <button type="submit" class="btnLog">Cadastrar</button>

            <a asp-action="CadastroM" asp-controller="CadMedico" class="btntroca">
                Não tem conta ainda? Cadastre-se
            </a>
        </form>
    </div>
    <script src="~/js/Medico.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
