
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Index.css" />
    <title>Ínicio</title>
</head>
<body>

    <header class="topo">
        <nav class="barraNav">
            <h2 class="esquerda">Olá</h2>
            <h1 class="centro">Sorria+</h1>
            <a asp-controller="CadPaciente" asp-action="LoginP" class="btn-voltar direita">Sair</a>
        </nav>
    </header>


    <div class="paiCarteirinha">
        <div class="carteirinha">
            <h3>Carteirinha Sorria+</h3>
            <label>Nome: Laura Valentini Xavier da Silva</label>
            <label>Número: 123456789 </label>
            <label>Plano: Sorria+ Plus </label>
        </div>
    </div>
    
    <div class="paiModal">
    <div class="modal" id="modal">
        <img src="~/img/btn-close.png" class="btn-close" id="btn-close"/>
        <div class="form-group">
        <label for="especialidade">Escolha a especialidade:</label>
                <select id="especialidade" class="form-control">
                    <option value="1">Clínica Geral</option>
                    <option value="2">Ortodontia</option>
                    <option value="3">Odontopediatria</option>
                </select>
            </div>
            <div class="form-group">
                <label for="medico">Médico disponível:</label>
                <select id="medico" class="form-control">
                    <option value="1">Dra. Carla karmen</option>
                    <option value="2">Dr. Menendes Atila</option>
                    <option value="3">Dr.Pedro Ronaldete</option>
                    <option value="4">Dr. João Silva</option>
                </select>
            </div>
            <div class="form-group">
                <label for="unidade">Unidade(s) disponível(is):</label>
                <select id="unidade" class="form-control">
                    <option value="1">Osasco</option>
                    <option value="2">Pinheiros</option>
                    <option value="3">Vila Mariana</option>
                </select>
            </div>
            <div class="form-group">
                <label for="horario">Horário disponível:</label>
                <select id="horario" class="form-control">
                    <option value="1">10:00</option>
                    <option value="2">11:30</option>
                    <option value="3">16:00</option>
                    <option value="4">17:30</option>
                </select>
            </div>
            <button type="submit" class="btn-agendar">Agendar Consulta</button>
    </div>
    </div>

    <div class="container-cards">
        <div class="card-consulta">
            <div class="info">
                <h3>Dr. Menendes Atila</h3>
                <p><strong>Data:</strong> 20/12/2025</p>
                <p><strong>Hora:</strong> 10:00</p>
                <p><strong>Local:</strong> Sorria+ Pinheiros</p>
            </div>
            <div class="status">
                <button class="cancelar"> Cancelar</button>
                <button class="editar"> Editar</button>               
                <label class="pendente">Pendente</label>
            </div>
        </div>
        <div class="card-consulta">
            <div class="info">
                <h3>Dr. João Silva</h3>
                <p><strong>Data:</strong> 12/12/2025</p>
                <p><strong>Hora:</strong> 11:30</p>
                <p><strong>Local:</strong> Sorria+ Osasco</p>
            </div>
            <div class="status">
                <button class="cancelar"> Cancelar</button>
                <button class="editar"> Editar</button>
                <label class="pendente">Pendente</label>

            </div>
        </div>
        <div class="card-consulta">
            <div class="info">
                <h3>Dra. Carla karmen</h3>
                <p><strong>Data:</strong> 03/12/2025</p>
                <p><strong>Hora:</strong> 16:00</p>
                <p><strong>Local:</strong> Sorria+ Vila Mariana</p>
            </div>
            <div class="status">
                <button class="cancelar"> Cancelar</button>
                <button class="editar"> Editar</button>
                <label class="pendente">Pendente</label>
            </div>
        </div>
      </div>
    <div class="popup-container">
        <button class="popup">Agendar consulta</button>
    </div>

    <script src="~/js/Index.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
